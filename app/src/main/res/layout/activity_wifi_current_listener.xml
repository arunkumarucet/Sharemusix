<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".WifiCurrentListener"
    android:layout_height="match_parent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:gravity="top"
            android:id="@+id/rv1"
            android:layout_alignParentTop="true"
            android:background="@color/BackgroundColorMain"
            android:padding="16dp">


            <TextView
                android:id="@+id/artist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/imageView"
                android:layout_toStartOf="@+id/imageButton4"
                android:maxLines="1"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:scrollbars="vertical"
                android:textColor="#666666"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/imageView"
                android:layout_toStartOf="@+id/imageButton4"
                android:fontFamily="@font/roboto"
                android:maxLines="1"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColor="#212121"
                android:textSize="16dp"
                android:textStyle="normal" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                app:srcCompat="@mipmap/ic_launcher" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/songimage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/rv1"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher_background" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#D9FFFFFF"
            android:gravity="bottom"
            android:padding="16dp">


            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_toEndOf="@id/present_time"
                android:layout_toRightOf="@id/present_time"
                android:progressBackgroundTint="#212121" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/play_pause"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_below="@+id/seekBar"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:scaleType="center"
                android:src="@drawable/ic_play_icon" />

            <TextView
                android:id="@+id/present_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="0:00" />

            <TextView
                android:id="@+id/total_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:text="0:00" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>